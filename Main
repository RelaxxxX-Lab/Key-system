<body>
    <div class="container">
        <h1>Moon Key System</h1>
        <p>Clique para iniciar a tarefa do Lootdest. A chave será exibida após 30 segundos.</p>
        <button id="stepButton" class="step-button">Iniciar Tarefa</button>
        <div class="timer" id="timer">30 segundos restantes...</div>
        <div id="keyOutput" class="key-output">
            <p id="keyText">Aqui está sua chave: MOON-KEY-12345</p>
        </div>
    </div>

    <script>
        const stepButton = document.getElementById('stepButton');
        const keyOutput = document.getElementById('keyOutput');
        const timer = document.getElementById('timer');
        let countdown = 30;
        let interval;

        stepButton.addEventListener('click', () => {
            stepButton.disabled = true;
            timer.style.display = 'block';

            // Update the timer every second
            interval = setInterval(() => {
                countdown--;
                timer.textContent = `${countdown} segundos restantes...`;

                if (countdown <= 0) {
                    clearInterval(interval);
                    timer.style.display = 'none';
                    keyOutput.style.display = 'block';
                }
            }, 1000);
            
            // Redirect to the lootdest link
            window.location.href = "https://lootdest.org/s?76e3c444";
        });

        // Anti-bypass by preventing key access without countdown
        document.addEventListener('visibilitychange', () => {
            if (document.hidden) {
                clearInterval(interval);
                countdown = 30;
                timer.textContent = "30 segundos restantes...";
                stepButton.disabled = false;
                keyOutput.style.display = 'none';
                timer.style.display = 'block';
            }
        });
    </script>
</body>
