            background-color: #222;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
            width: 300px;
        }
        h1 {
            color: #9a55ff;
        }
        .step-button {
            background-color: #9a55ff;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            margin-top: 15px;
            cursor: pointer;
            font-size: 16px;
        }
        .step-button:disabled {
            background-color: #555;
            cursor: not-allowed;
        }
        .key-output {
            margin-top: 20px;
            display: none;
        }
        .key-output p {
            font-size: 18px;
            background-color: #333;
            padding: 10px;
            border-radius: 5px;
